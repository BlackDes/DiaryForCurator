<Page x:Class="Diary4CuratorFullEdition.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Diary4CuratorFullEdition.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

	<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
		<PasswordBox x:Name="pbxPassword" Style="{StaticResource MaterialDesignFloatingHintRevealPasswordBox}"
				 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
				 Margin="10 10 10 0" MinWidth="300" MaxWidth="400"
				 FontSize="16"
				 materialDesign:HintAssist.Hint="Введите пароль"/>
		<Button x:Name="btnAuthorization" Click="btnAuthorization_Click"
				Margin="10 10 10 0" 
				Content="Авторизация" FontSize="16"
				Height="30" MinWidth="300" MaxWidth="400"/>
		<Button x:Name="btnSetPassword" Click="btnSetPassword_Click"
				Margin="10 10 10 10" 
				Content="Установить пароль" FontSize="16"
				Height="30" MinWidth="300" MaxWidth="400"/>
	</StackPanel>
</Page>
